<!doctype html>
<html>
    <head>
        <title>{{title}}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Slabo+27px">
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inconsolata">
        <link rel="shortcut icon" type="image/x-icon" href="teamspeak.ico">
        <style type="text/css">
            * { font-family: 'Slabo 27px', sans-serif; }
            body, html { background: #f5f5f5; margin: 0; padding: 0; }
            body { padding: 5vh 0; color: #2C3E50; }
            body>h1 {
                position: relative; top: 0; left: 15vw; width: calc(70vw - 4vh); padding: 2vh; margin: 0;
                font-size: 6vh; line-height: 6vh; font-weight: normal; text-align: center;
                color: #3498DB; border-bottom: 2px solid #3498DB; z-index: 5;
            }
            main {
                position: relative; top: -2px; left: 15vw; width: 70vw; padding: 0; padding-top: 2px; margin: 0;
                background: #fff; box-shadow: 0 1px 15px -2px #BDC3C7;
                min-height: 400px;
            }
            aside {
                position: absolute; top: 2px; left: 0; bottom: 0; width: 35%; min-height: calc(100% - 2px);
                background: #ECF0F1; border-right: 2px solid #e0e0e0;
            }
            aside iframe {
                position: absolute; top: 0; left: 0; right: 0; bottom: 0; width: 100%; height: 100%;
                border: none; outline: none !important;
                overflow: hidden;
            }
            article {
                position: relative; margin-left: 35%; padding: 3vh;
            }
            footer {
                margin-top: 3vh;
                text-align: right; font-size: 0.9em; color: #95A5A6;
            }

            /* HTML elements */
            a {
                color: #1ABC9C;
                text-decoration: none;
            }
            a:hover { text-decoration: underline; }
            img { max-width: 100%; }
            table { border-collapse: collapse; width: 100%; margin-bottom: 2vh; }
            td, th { padding: 1vh; border: 1px solid #BDC3C7; }
            th { background: #ECF0F1; text-align: left; }
            tr:nth-child(even) td, tr:nth-child(even) th { background: #f5f5f5; }
            p, article h1, article h2, article h3, article h4, article h5, article h6 { margin: 0; margin-bottom: 2vh; padding: 0; }
            article h1 { font-size: 2.5em; color: #34495E; font-weight: bold; }
            article h2 { font-size: 2.25em; color: #34495E; font-weight: normal; }
            article h3 { font-size: 2.0em; color: #34495E; font-weight: bold; }
            article h4 { font-size: 1.75em; color: #34495E; font-weight: normal; }
            article h5 { font-size: 1.5em; color: #34495E; font-weight: bold; }
            article h6 { font-size: 1.25em; color: #34495E; font-weight: normal; }
            code, tt, kbd, samp, var { font-family: 'Inconsolata', monospace; background: #ECF0F1; border: 1px solid #BDC3C7; border-radius: 3px; padding: 2px 3px; margin: 0 1px; }
            pre>code { display: block; padding: 1vh; }
            ul, ol { padding-left: 1.7em; }

            @media screen and (max-width: 1000px) {
                body>h1 { left: 2vh; width: calc(100vw - 10vh); }
                main { left: 2vh; width: calc(100vw - 6vh); }
            }
            @media screen and (max-width: 800px) {
                aside { position: relative; top: 0; width: 100%; min-height: 150px; border-right: none; border-bottom: 2px solid #e0e0e0; }
                article { margin-left: 0; }
            }
        </style>
        <script type="text/javascript">
            function updateFrame() {
                document.getElementById("container").style.height = document.getElementById("frame").contentWindow.document.body.offsetHeight + "px";
                document.getElementById("main").style.minHeight = (document.getElementById("frame").contentWindow.document.body.offsetHeight + 2) + "px";
            }
            function receiveMessage(event) {
                if (event.data == "resize") updateFrame();
            }
            window.addEventListener("message", receiveMessage, false);
        </script>
    </head>
    <body>
        <h1>{{title}}</h1>
        <main id="main">
            <aside id="container"><iframe src="embed" id="frame" seamless onload="updateFrame();" onresize="updateFrame();"></iframe></aside>
            <article>
                <p>{{{description}}}</p>

                <footer>Powered by <a href="https://github.com/moqmar/ts3-status">ts3-status</a> by Moritz Marquardt. Licensed under <a href="">MIT License</a>.</footer>
            </article>
        </main>
    </body>
</html>
